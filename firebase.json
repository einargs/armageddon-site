{
  "functions": {
    "predeploy": [
      "npm --prefix $RESOURCE_DIR run lint",
      "npm --prefix $RESOURCE_DIR run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/devices/list", "function": "listAccessibleDevices" },
      { "source": "/api/devices/configure", "function": "configureDevice" },
      { "source": "/api/devices/get", "function": "listDevices"},
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
